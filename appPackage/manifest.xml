<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="TaskPaneApp">
  <Id>d2c17289-5195-4b1f-af2f-8bdddef30a42</Id>
  <Version>1.0.3</Version>
  <ProviderName>VobaPay</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  <DisplayName DefaultValue="vobapay Paymentlink"/>
  <Description DefaultValue="QR-Code für Payment Links in Word einfügen"/>
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-32.png"/>
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xsi:type="VersionOverridesV1_0" xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <FunctionFile resid="Taskpane.Url" />
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="VobaPayGroup" label="vobapay">
                <Control xsi:type="Button" id="vobapayButton">
                  <Label resid="Button.Label" />
                  <Supertip>
                    <Title resid="Button.Title" />
                    <Description resid="Button.Desc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16" />
                    <bt:Image size="32" resid="Icon.32" />
                    <bt:Image size="80" resid="Icon.80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>vobapayTaskpane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://localhost:3000/assets/icon-16.png" />
        <bt:Image id="Icon.32" DefaultValue="https://localhost:3000/assets/icon-32.png" />
        <bt:Image id="Icon.80" DefaultValue="https://localhost:3000/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="Button.Label">vobapay Paymentlink</bt:String>
        <bt:String id="Button.Title">vobapay Paymentlink</bt:String>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="Button.Desc">Payment Link als QR-Code einfügen</bt:String>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>

</OfficeApp>
